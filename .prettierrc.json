{
	"extends": [
		"@wordpress/prettier-config"
	],
	"overrides": [
		{
			"files": ["*.php"],
			"options": {
				"parser": "php",
				"phpVersion": "8.0",
				"tabWidth": 4,
				"useTabs": true
			}
		},
		{
			"files": ["*.scss", "*.css"],
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		}
	]
}