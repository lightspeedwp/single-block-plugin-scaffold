<?xml version="1.0"?>
<ruleset name="{{projectName}}">
	<description>Coding standards for {{projectName}}</description>

	<!-- Include WordPress Coding Standards -->
	<rule ref="WordPress">
		<!-- Allow short array syntax -->
		<exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
		
		<!-- Allow short open tags in templates -->
		<exclude name="Generic.PHP.DisallowShortOpenTag.EchoFound"/>
		
		<!-- Exclude file comment requirements for test files -->
		<exclude name="Squiz.Commenting.FileComment"/>
	</rule>

	<!-- WordPress VIP Rules -->
	<rule ref="WordPress-VIP-Go"/>

	<!-- Additional rules -->
	<rule ref="WordPress.Security.EscapeOutput"/>
	<rule ref="WordPress.Security.NonceVerification"/>
	<rule ref="WordPress.Security.ValidatedSanitizedInput"/>

	<!-- Check all PHP files -->
	<file>.</file>

	<!-- Exclude certain directories -->
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/build/*</exclude-pattern>
	<exclude-pattern>*/dist/*</exclude-pattern>
	<exclude-pattern>*/tests/data/*</exclude-pattern>

	<!-- Allow for plugin file headers -->
	<rule ref="Squiz.Commenting.FileComment">
		<exclude-pattern>{{slug}}.php</exclude-pattern>
	</rule>

	<!-- Set minimum supported PHP version -->
	<config name="minimum_supported_wp_version" value="6.0"/>
	<config name="testVersion" value="8.0-"/>

	<!-- Show colors in output -->
	<arg name="colors"/>

	<!-- Show progress -->
	<arg value="p"/>

	<!-- Show sniff codes in all reports -->
	<arg value="s"/>

	<!-- Check up to 20 files simultaneously -->
	<arg name="parallel" value="20"/>

	<!-- Enable caching -->
	<arg name="cache" value=".phpcs.cache"/>

	<!-- Define WordPress constants -->
	<config name="wp_version" value="6.0"/>
</ruleset>